@model MovieCollection.Web.Models.Movie.EditMovieViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Редактирование</h2>

<br>

<form class="form" asp-action="ConfirmEdit" method="post" enctype="multipart/form-data">
    <input class="invisible" asp-for="MovieId" />
    
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-group">
        <label asp-for="YearOfIssue"></label>
        <input class="form-control" asp-for="YearOfIssue">
    </div>
    <div class="form-group">
        <label asp-for="ProducerId"></label>
        <select class="form-control" asp-for="ProducerId" asp-items="Model.Producers"></select>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label for="poster">Постер</label>
        <img src="/img/@Model.PosterFileName" alt="" id="poster">
        <input type="file" id="Poster" name="Poster" onchange="updatePreview(event)"/>
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
</form>

<script>
    const updatePreview = function (event) {
        const element = document.getElementById('poster');
        element.src = URL.createObjectURL(event.target.files[0]);
    };
</script>