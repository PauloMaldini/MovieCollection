@model MovieCollection.Web.Models.Movie.EditMovieViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Редактирование фильма</h2>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
      <li class="breadcrumb-item"><a asp-action="Index">Список</a></li>
      <li class="breadcrumb-item"><a asp-action="Detail" asp-route-id="@Model.MovieId">Детали</a></li>
      <li class="breadcrumb-item active" aria-current="page">Редактирование</li>
  </ol>
</nav>

<form method="post" enctype="multipart/form-data">
    <partial name="_EditPartial" />
    <button type="submit" class="btn btn-success">Сохранить</button>
    <a class="btn btn-light" asp-action="Detail" asp-route-id="@Model.MovieId">Отмена</a>
</form>


@section Scripts
{
    <script>
        const updatePreview = function (event) {
            const element = document.getElementById('poster');
            element.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
}

